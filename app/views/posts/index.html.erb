<div class="container pt-5">
  <div>
    <h1 class="title">Forum</h1>
    <h4><%= analytic_time(DateTime.current) %></h4>
    <button type="button" class="btn btn-light mb-4 mt-3"><%= link_to "New post", new_post_path, class: "button is-primary" %></button>
  </div>

  <% @posts.each do |post| %>
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5><h6><%= analytic_time(post.created_at) %></h6>
    <p class="card-text"><%= post.content %></p>
    <div class="buttons">
      <button type="button" class="btn btn-warning btn-sm m-1"><%= link_to "Edit", edit_post_path(post), class: "button is-small" %>
      <button type="button" class="btn btn-danger btn-sm"><%= link_to "Delete", post_path(post), data: {confirm: "Are you sure you want to delete this?"}, method: :delete, class: "button is-small is-danger" %>
    </div>
  </div>
  <% end %>
</div>