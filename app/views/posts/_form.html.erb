<% if @post.errors.any? %>
<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h2>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: [@post], local: true do |f| %>
  <div class="field">
    <%= f.label :title, class: "label" %>
    <div class="control">
      <%= f.text_field :title, required: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :content, class: "label" %>
    <div class="control">
      <%= f.text_area :content, required: true, class: "input" %>
    </div>
  </div>

  <p>
    <%= f.submit class: "button is-primary" %>
  </p>
<% end %>
